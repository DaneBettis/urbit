{
  "compilerOptions": {
    "baseUrl": ".",
	  "outDir": "./dist",
    "module": "ESNext",
    "noImplicitAny": true,
    "target": "ESNext",
    "pretty": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noErrorTruncation": true
  },
  "exclude": ["node_modules", "./dist/**/*", "@types", "rollup.config.ts"],
  "include": ["./*.ts"]
}
